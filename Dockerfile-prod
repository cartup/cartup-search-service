FROM openjdk:8
ADD build/docker/entrypoint-prod.sh /entrypoint.sh
ADD src/main/resources/application.properties /
COPY conf /conf/
ADD conf/datastoreconfig-prod.properties /conf/datastoreconfig.properties
RUN apt update && apt install vim -y
EXPOSE 8443 8080 8004
ENTRYPOINT ["bash", "/entrypoint.sh"]
ADD target/cartup-search-service-0.0.1-SNAPSHOT.war /cartup-search-service.war
